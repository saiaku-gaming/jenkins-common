#!groovy

pipeline {
    agent { label 'linux' }

    stages {
        stage('Prepare') {
            steps {
                git(branch: "$BRANCH_NAME", url: scm.userRemoteConfigs[0].url)
                script {
                    gitCommit = sh(
                            script: 'git rev-parse HEAD',
                            returnStdout: true
                    ).trim().take(10)

                    gitDate = sh(
                            script: 'git show -s --format=%cd --date=short HEAD',
                            returnStdout: true
                    ).trim()

                    version = readMavenPom(file: 'pom.xml').getVersion()

                    echo " ***** Build name:     $currentBuild.displayName"
                    echo " ***** Client Version: $version"

                    echo 'Environment Parameters:'
                    sh 'printenv'
                }
            }
        }

        stage('Package artifact') {
            steps {
                sh "mvn clean package install deploy --update-snapshots"
            }
        }
    }

    tools {
        maven 'Maven 3.5.0'
        jdk 'openjdk-1.8.0'
    }
}
